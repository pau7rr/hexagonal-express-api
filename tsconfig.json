{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": ".",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      },
      "types": ["jest"]
    },
    "include": ["src/**/*", "tests"],
    "exclude": ["node_modules", "dist"]
}